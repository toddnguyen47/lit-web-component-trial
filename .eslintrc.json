{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "class-methods-use-this": ["error", {"exceptions": ["render"] }],
        "import/extensions": ["error", "always"],
        "max-len": ["error", {"code": 120}],
        "no-unused-vars": ["warn"],
        "object-curly-spacing": ["error", "never"]
    }
}
